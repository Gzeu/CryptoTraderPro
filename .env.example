# üöÄ CryptoTraderPro - Environment Configuration
# Copy this file to .env.local and update with your actual values
# ‚ö†Ô∏è NEVER commit .env.local with real credentials to version control!

# =============================================================================
# üìä API KEYS & CRYPTO DATA SOURCES
# =============================================================================

# CoinGecko API (Recommended - Most comprehensive crypto data)
# Free tier: 50 calls/minute | Pro tier: 500+ calls/minute
# Get your key: https://www.coingecko.com/en/api
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key_here
NEXT_PUBLIC_COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Binance API (Enhanced market data and trading)
# Create API key: https://www.binance.com/en/my/settings/api-management
NEXT_PUBLIC_BINANCE_API_KEY=your_binance_api_key
NEXT_PUBLIC_BINANCE_SECRET_KEY=your_binance_secret_key
NEXT_PUBLIC_BINANCE_API_URL=https://api.binance.com/api/v3
NEXT_PUBLIC_BINANCE_WS_URL=wss://stream.binance.com:9443/ws

# CryptoCompare API (Historical data and news)
# Get your key: https://www.cryptocompare.com/api
NEXT_PUBLIC_CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here
NEXT_PUBLIC_CRYPTOCOMPARE_API_URL=https://min-api.cryptocompare.com/data

# CoinMarketCap API (Alternative reliable data source)
# Get your key: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_cmc_api_key

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================

# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_super_secret_jwt_secret_min_32_characters_here

# API rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Security headers
SECURITY_HEADERS_ENABLED=true

# =============================================================================
# üìà DATABASE & STORAGE
# =============================================================================

# Primary database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/cryptotraderpro
# Alternative: DATABASE_URL=mysql://user:password@localhost:3306/cryptotraderpro
# Development: DATABASE_URL=file:./dev.db

# Redis for caching and real-time features
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# File storage (AWS S3 for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=cryptotraderpro-assets

# =============================================================================
# üìà ANALYTICS & MONITORING
# =============================================================================

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Error tracking with Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id

# Product analytics with PostHog
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# üìß NOTIFICATIONS & ALERTS
# =============================================================================

# Email service (SendGrid recommended)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@cryptotraderpro.com

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook

# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook

# Firebase for push notifications
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# =============================================================================
# üåç APPLICATION SETTINGS
# =============================================================================

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_NAME=CryptoTraderPro
NEXT_PUBLIC_APP_SHORT_NAME=CTP

# WebSocket for real-time data
NEXT_PUBLIC_WS_URL=ws://localhost:3001
# Production: wss://your-websocket-server.com

# Environment mode
NODE_ENV=development
# Options: development, production, test

# =============================================================================
# üéÄ FEATURE FLAGS
# =============================================================================

# Core features
NEXT_PUBLIC_ENABLE_PORTFOLIO_TRACKING=true
NEXT_PUBLIC_ENABLE_PRICE_ALERTS=true
NEXT_PUBLIC_ENABLE_ADVANCED_CHARTS=true
NEXT_PUBLIC_ENABLE_DARK_THEME=true
NEXT_PUBLIC_ENABLE_TRADING=false
NEXT_PUBLIC_ENABLE_NEWS_FEED=true

# Advanced features
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=false
NEXT_PUBLIC_ENABLE_SOCIAL_TRADING=false
NEXT_PUBLIC_ENABLE_DEFI_INTEGRATION=false
NEXT_PUBLIC_ENABLE_PWA=false

# =============================================================================
# ‚ö° PERFORMANCE & OPTIMIZATION
# =============================================================================

# Cache configuration (in seconds)
CACHE_TTL=300
NEXT_PUBLIC_CACHE_DURATION=30000

# Real-time update intervals (in milliseconds)
NEXT_PUBLIC_PRICE_UPDATE_INTERVAL=5000
NEXT_PUBLIC_PORTFOLIO_UPDATE_INTERVAL=10000

# API limits
API_RATE_LIMIT=60
NEXT_PUBLIC_MAX_WATCHLIST_SIZE=50
NEXT_PUBLIC_MAX_PORTFOLIO_ASSETS=100

# Image optimization
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# CDN configuration
NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com

# =============================================================================
# üß™ TESTING & DEVELOPMENT
# =============================================================================

# Test database
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/cryptotraderpro_test

# Mock API for testing
NEXT_PUBLIC_USE_MOCK_API=false
MOCK_API_DELAY=1000

# Debug settings
DEBUG=cryptotraderpro:*
LOG_LEVEL=info
NEXT_PUBLIC_DEBUG=false

# Storybook
STORYBOOK_PORT=6006

# =============================================================================
# üåê LOCALIZATION
# =============================================================================

# Supported languages
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr,de,zh,ja,ko

# =============================================================================
# üîó THIRD-PARTY INTEGRATIONS
# =============================================================================

# TradingView widgets
NEXT_PUBLIC_TRADINGVIEW_WIDGET_KEY=your_tradingview_key

# Social media APIs for news
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret

# =============================================================================
# üîí SECURITY & CORS
# =============================================================================

# CORS configuration
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Content Security Policy
CSP_REPORT_URI=https://your-domain.com/api/csp-report

# =============================================================================
# üìù IMPORTANT NOTES
# =============================================================================

