# =============================================================================
# CryptoTraderPro Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# -----------------------------------------------------------------------------
# Crypto APIs (Free tiers available)
# -----------------------------------------------------------------------------

# CoinGecko API (Free: 10-50 calls/minute)
# Get your key from: https://www.coingecko.com/en/api
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key_here
NEXT_PUBLIC_COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Binance API (Free: No rate limit for public data)
# Get your key from: https://www.binance.com/en/my/settings/api-management
NEXT_PUBLIC_BINANCE_API_KEY=your_binance_api_key_here
NEXT_PUBLIC_BINANCE_API_URL=https://api.binance.com/api/v3
NEXT_PUBLIC_BINANCE_WS_URL=wss://stream.binance.com:9443/ws

# CryptoCompare API (Free: 100k calls/month)
# Get your key from: https://www.cryptocompare.com/api
NEXT_PUBLIC_CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here
NEXT_PUBLIC_CRYPTOCOMPARE_API_URL=https://min-api.cryptocompare.com/data

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CryptoTraderPro

# Database (Optional - for user portfolios)
# DATABASE_URL=postgresql://user:password@localhost:5432/cryptotraderpro

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable features during development
NEXT_PUBLIC_ENABLE_PORTFOLIO=true
NEXT_PUBLIC_ENABLE_ALERTS=true
NEXT_PUBLIC_ENABLE_TRADING=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# -----------------------------------------------------------------------------
# Performance & Caching
# -----------------------------------------------------------------------------

# Cache duration in milliseconds
NEXT_PUBLIC_CACHE_DURATION=30000
# Price update interval in milliseconds
NEXT_PUBLIC_PRICE_UPDATE_INTERVAL=5000
# Max coins to track simultaneously
NEXT_PUBLIC_MAX_WATCHLIST_SIZE=50

# -----------------------------------------------------------------------------
# Development & Debug
# -----------------------------------------------------------------------------

# Set to 'development' for detailed logs
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false